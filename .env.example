# ExRNA Research Platform - Environment Variables
# Copy to .env and fill in your values

# --- API Keys (REQUIRED) ---
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# --- Claude Models ---
CLAUDE_MODEL_OPUS=claude-opus-4-6
CLAUDE_MODEL_SONNET=claude-sonnet-4-6
CLAUDE_MODEL_HAIKU=claude-haiku-4-5-20251001

# --- Gemini Models ---
GEMINI_MODEL_REASONING=gemini-2.5-pro
GEMINI_MODEL_BULK=gemini-2.5-flash

# --- Rate Limiting ---
MAX_CONCURRENT_REQUESTS=15
GEMINI_REQUESTS_PER_MINUTE=300
CLAUDE_REQUESTS_PER_MINUTE=60

# --- Database URLs ---
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=exrna_research_2024
POSTGRES_URL=postgresql+asyncpg://exrna:exrna_research@localhost:5432/exrna_platform
REDIS_URL=redis://localhost:6379/0
CHROMA_PERSIST_DIR=./data/chromadb

# --- Budget ---
MONTHLY_BUDGET_USD=5000.0
BUDGET_WARNING_THRESHOLD=0.8

# --- Server ---
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
